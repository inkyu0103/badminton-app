// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Rank {
  S
  A
  B
  C
  D
  E
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  rank     Rank     @default(E)
  gender   Gender   @default(MALE)
  birthday DateTime

  @@map("USER")
}
